<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.PregnancyDetails.pregnancyimagegallery.MyGalleryFragment">

    <TextView
        android:id="@+id/gallerytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textSize="16sp"
        android:text="Uploaded Pictures"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"/>

    <Spinner
        android:id="@+id/gallery_option_spinner"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:spinnerMode="dropdown"
        android:entries="@array/gallery_options"
        android:layout_marginRight="12dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="12dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/gallery_option_spinner"/>

    <GridView
        android:layout_below="@id/view_divider"
        android:id="@+id/list_gallery"
        android:layout_width="match_parent"
        android:drawSelectorOnTop="true"
        android:layout_margin="12dp"
        android:layout_height="wrap_content"
        android:stretchMode="columnWidth"
        android:numColumns="2"/>

    <RelativeLayout
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/empty_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="50dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_baby_scan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No baby scan uploaded. \nTap '+' below to get started"
            style="@style/TextAppearance.AppCompat.Medium"
            android:textAlignment="center"
            android:layout_below="@+id/empty_image"/>

    </RelativeLayout>

</RelativeLayout>