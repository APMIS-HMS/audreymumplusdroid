<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pill Name *"
            android:paddingLeft="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        <EditText
            android:id="@+id/pill_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background"
            android:layout_below="@+id/t1"
            android:height="50dp"
            android:paddingStart="8dp"
            android:inputType="textCapSentences"
            tools:text="Chloramphenicol" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity (Per Time) *"
            android:paddingLeft="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        <EditText
            android:id="@+id/qty_per_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_below="@+id/t2"
            android:height="50dp"
            android:paddingStart="8dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequency (e.g 2 times daily) *"
            android:paddingLeft="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        <EditText
            android:id="@+id/frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_below="@+id/t3"
            android:height="50dp"
            android:paddingStart="8dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Unit"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:paddingLeft="8dp"
                />

            <com.shawnlin.numberpicker.NumberPicker
                android:layout_marginTop="8dp"
                android:id="@+id/time_unit_picker"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:np_dividerColor="@color/colorPrimary"
                app:np_height="40dp"
                app:np_max="59"
                app:np_min="0"
                app:np_orientation="horizontal"
                app:np_selectedTextSize="32sp"
                app:np_textColor="@color/colorPrimary"
                app:np_textSize="24sp"
                app:np_value="0" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration (e.g Week, Day)"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:paddingEnd="8dp"/>

        <Spinner
            android:layout_marginTop="8dp"
            android:id="@+id/duration_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            tools:entries="@array/day_week"
            android:entries="@array/day_week"
            android:background="@drawable/spinner_background"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/holder"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instruction"
            android:paddingLeft="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        <EditText
            android:id="@+id/instruction"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/edittext_background"
            android:layout_below="@+id/t4"
            android:height="100dp"
            android:hint="E.g Pill should be taken after meal."
            android:gravity="start"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:inputType="textCapSentences"/>

    </RelativeLayout>

    <View
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
        <Switch
            android:id="@+id/reminder"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Reminder"
            android:paddingStart="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <RelativeLayout
        android:id="@+id/reminder_container"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        <RelativeLayout
            android:id="@+id/time_container"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/time_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/set_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SET TIMES"
                android:layout_centerInParent="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:focusable="false"
                android:clickable="false"/>

            <ImageButton
                android:id="@+id/add_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_add"
                android:background="@color/user_transparent"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:focusable="false"
                android:clickable="false"/>


        </RelativeLayout>

    <!--    <Switch
            android:id="@+id/repeat"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repeat"
            android:paddingStart="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_below="@+id/time_container"/>-->

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="8dp"
            android:id="@+id/pill_time_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_container"
            android:background="@drawable/edittext_background"/>

    </RelativeLayout>


    <Button
        android:id="@+id/save_btn"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"/>


</LinearLayout>
</ScrollView>