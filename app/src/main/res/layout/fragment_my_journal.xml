<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context=".ui.Journal.MyJournalFragment">

    <TextView
        android:id="@+id/gallerytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textSize="16sp"
        android:text="Your List of Journals"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"/>

    <Spinner
        android:id="@+id/gallery_option_spinner"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:spinnerMode="dropdown"
        android:entries="@array/week_history"
        android:layout_marginRight="12dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="12dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/gallery_option_spinner"/>

    <ListView
        android:id="@+id/journal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_divider"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_add_black_24dp" />

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMPTY VIEW"
        android:layout_centerInParent="true"
        android:visibility="gone"/>


</RelativeLayout>