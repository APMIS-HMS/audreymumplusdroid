<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/pill_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Tramadol"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_marginStart="4dp"/>

    <TextView
        android:id="@+id/pill_intructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Use 3 times daily, before meal and after meal \n 3:00am, 2:00pm, 6:00pm"
        android:layout_below="@id/pill_name"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:maxWidth="300dp"
        android:layout_marginStart="12dp"/>

    <ImageView
        android:id="@+id/popup_option"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_baseline_more_vert_24px"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/pill_intructions"
        android:layout_marginTop="4dp"/>

</RelativeLayout>