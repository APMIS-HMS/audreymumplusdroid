<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/forum_icon"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_forum_profile"/>

    <TextView
        android:id="@+id/forum_topic"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="GENERAL"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="80dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/arrow_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/right_arrow_grey"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/forum_new_message_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:background="@drawable/full_circle"
            android:visibility="invisible"/>
        
        <TextView
            android:id="@+id/forum_member_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forum_member_counter"
            android:layout_alignParentBottom="true"
            android:visibility="invisible"/>

    </RelativeLayout>



</LinearLayout>