        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/weekly_progress_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="8dp" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/get_audrey_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/empty_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_my_pregnancy_empty_state"/>

        <TextView
            android:id="@+id/empty_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_state_preg_text"
            style="@style/TextAppearance.AppCompat.Medium"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/empty_image"/>

        <Button
            android:id="@+id/get_audrey_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="GET AUDREY"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/edittext_background"
            android:layout_centerHorizontal="true"
